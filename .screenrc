# 關閉啟動訊息。
startup_message off

# tell screen my default default shell
shell bash

# 加入狀態列。
caption always "%{=u .r} %-w%<%{=ub .Y}%n %t%{=u .r}%+w "
hardstatus alwaysignore
hardstatus alwayslastline "%{= .K} [%l]%<%=%{= .Y}$USER%{= .R}@%H %=%{= .m} %Y/%m/%d%{= .M} %0c "

# 將預設編碼設為 UTF-8。
defutf8 on

# Dynamic title
shelltitle '$ |bash'

#define rollback lines
defscrollback 10000


#Start at windows 1
bind c screen 1
bind ^c screen 1
bind 0 select 10
screen 1
